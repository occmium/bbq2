<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-lg-4 col-md-4">
      <div class="field">
        <br>
        <%= f.label :email %><br/>
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <br>
        <%= f.label :name %><br/>
        <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <br>
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>Не менее <%= @minimum_password_length %> символов</em>
        <% end %><br/>
        <%= f.password_field :password, class: "form-control", autocomplete: "passwords" %>
      </div>

      <div class="field">
        <br>
        <%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <br>
        <%= f.submit "Зарегистрироваться", class: "btn btn-info" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>

